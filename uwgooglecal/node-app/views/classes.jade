extends layout

block content
  h1= title
  p Event summary: #{eventsummary}
  p Date: #{eventdate}
  br
  p
    b Add a new event:
  form#formAddClass(name="addclass",method="post",action="/addclass")
        input#inputClassName(type="text",placeholder="Class Name",name="classname")
        br
        br
        input#inputClassLocation(type="text",placeholder="Room Number",name="classlocation")
        br
        br
        select#inputClassStart(name="classstart")
          option(value="9") 9
          option(value="10") 10
          option(value="11") 11
          option(value="12") 12
          option(value="1") 1
        br
        br
        select#inputQuarter(name="classqtr")
          option(value="wi16") Winter 2016
          option(value="sp16") Spring 2016
        br
        br
        button#btnSubmit(type="submit") Submit