extends layout

block content
  h1= title
  p
    b Add a new class:
  form#formAddClass(name="addclass",method="post",action="/addclass")
    select#inputQuarter(name="classqtr")
      option(value="wi16") Winter 2016
      option(value="sp16") Spring 2016
    br
    br
    table
      tr
        th Name
        th Room
        th Start
        th End
        th Days
      // each val in [0,1,2,3]
      -val= 0
      tr
        td
          input#inputClassName(type="text",placeholder="Class Name",name="classname#{val}")
        td
          input#inputClassLocation(type="text",placeholder="Room Number",name="classlocation#{val}")
        td
          input#inputClassStart(type="time",name="classstart#{val}")
        td
          input#inputClassEnd(type="time",name="classend#{val}")
        td
          input#inputClassDays(type="checkbox",name="monday")
          | M
          input#inputClassDays(type="checkbox",name="tuesday")
          | T
          input#inputClassDays(type="checkbox",name="wednesday")
          | W
          input#inputClassDays(type="checkbox",name="thursday")
          | Th
          input#inputClassDays(type="checkbox",name="friday")
          | F
    button#btnSubmit(type="submit") Add
  if error
    each err in error
      p= err
  h2 #{message}